\version "2.19.84"
\language "english"


% Ottava and octave movements
\new Staff {
  a2 b
  \ottava #-2
  a2 b
  \ottava #-1
  a2 b
  \ottava #0
  as b \ottava #1
}

%Ottava text
% set the style and then write in the applicable notes.
{
  \ottava #1
  \set Staff.ottavation = #"8"
  c''1
  \ottava #0
  c'1
  \ottava #1
  \set Staff.ottavation = #"Nonsensical"
  c''4
}


